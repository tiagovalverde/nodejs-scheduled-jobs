[
  {
    "type": "WebScraper",
    "description": "Every 5 minutes fetch ADA price",
    "rule": "*/5 * * * *",
    "options": {
      "task": {
        "url": "https://coinmarketcap.com/currencies/cardano/",
        "template": "{{ timestamp }}: ADA: {{ price }}",
        "storage": {
          "enabled": true,
          "type": "json",
          "filename": "ada-price.json"
        },
        "sender": {
          "enabled": false
        },
        "actions": [
          {
            "type": "GET_TEXT",
            "selector": ".priceValue",
            "variable": "price"
          }
        ]
      }
    }
  }
]